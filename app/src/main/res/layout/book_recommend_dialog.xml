<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="#FFFFFF">

    <TextView
        android:id="@+id/book_recommend_dialog_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ownglyph_ryuttung"
        android:text="Sad"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        tools:layout_editor_absoluteY="50dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/ownglyph_ryuttung"
        android:text="당신을 위한 책 추천!"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/moodtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:orientation="horizontal" />




        <TextView
            android:id="@+id/book_recommend_dialog_book_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ownglyph_ryuttung"
            android:gravity="center"
            android:text="흥부와 놀부"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moodtext" />


        <TextView
            android:id="@+id/book_recommend_dialog_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/ownglyph_ryuttung"
            android:text="작가미상"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_recommend_dialog_book_name" />



</androidx.constraintlayout.widget.ConstraintLayout>