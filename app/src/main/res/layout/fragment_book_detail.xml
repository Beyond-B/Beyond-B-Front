<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_paper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=""
        android:paddingBottom="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_backspace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txDetailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txDetailAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_thin"
                android:text="작가미상"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/txDetailTitle"
                app:layout_constraintTop_toBottomOf="@id/txDetailTitle" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="90dp"
                android:background="#9AA5B1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txDetailTitle"
                app:layout_constraintTop_toBottomOf="@id/txDetailAuthor" />

            <ImageView
                android:id="@+id/imBadge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="-50dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_badge0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view" />

            <TextView
                android:id="@+id/txAboutT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="About"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/txDetailTitle"
                app:layout_constraintTop_toBottomOf="@id/card" />

            <TextView
                android:id="@+id/txLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="🔗도서 링크"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/txAbout"
                app:layout_constraintTop_toBottomOf="@id/card" />

            <TextView
                android:id="@+id/txAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/pretendard_thin"
                android:letterSpacing="0.1"
                android:lineSpacingExtra="5sp"
                android:text="옛날옛적에/.........................................................................................................."
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/txDetailTitle"
                app:layout_constraintStart_toStartOf="@id/txAboutT"
                app:layout_constraintTop_toBottomOf="@id/txAboutT" />

            <TextView
                android:id="@+id/txDateT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="날짜"
                android:textSize="15dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@id/view4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txAbout" />

            <TextView
                android:id="@+id/txDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-thin"
                android:text="2024.02.15"
                app:layout_constraintBottom_toBottomOf="@id/view5"
                app:layout_constraintEnd_toEndOf="@id/view4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txDateT" />

            <View
                android:id="@+id/view4"
                android:layout_width="0.5dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:background="#9AA5B1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txAbout" />

            <TextView
                android:id="@+id/txMoodT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="기분"
                android:textSize="15dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/view4"
                app:layout_constraintTop_toBottomOf="@id/txAbout" />

            <ImageView
                android:id="@+id/imMood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_badge0"
                app:layout_constraintBottom_toBottomOf="@id/view5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/view4"
                app:layout_constraintTop_toBottomOf="@id/txMoodT" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view4" />

            <TextView
                android:id="@+id/txQuiz1T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="처음 푼 날"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/view5"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/view5" />

            <ImageView
                android:id="@+id/imBadge1"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_badge0"
                app:layout_constraintStart_toEndOf="@id/txQuiz1Date"
                app:layout_constraintTop_toTopOf="@id/txQuiz1Date" />

            <TextView
                android:id="@+id/txQuiz1Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/pretendard_thin"
                android:text="2024.01.15"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/view4"
                app:layout_constraintTop_toTopOf="@id/txQuiz1T" />

            <TextView
                android:id="@+id/txQuiz2T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="두번째로 푼 날"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/view5"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/txQuiz1T" />

            <ImageView
                android:id="@+id/imBadge2"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_badge0"
                app:layout_constraintStart_toEndOf="@id/txQuiz2Date"
                app:layout_constraintTop_toTopOf="@id/txQuiz2Date" />

            <TextView
                android:id="@+id/txQuiz2Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_thin"
                android:text="not solved yet"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/txQuiz1Date"
                app:layout_constraintTop_toTopOf="@id/txQuiz2T" />

            <TextView
                android:id="@+id/txQuiz3T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="세번째로 푼 날"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/view5"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/txQuiz2T" />

            <ImageView
                android:id="@+id/imBadge3"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_badge0"
                app:layout_constraintStart_toEndOf="@id/txQuiz3Date"
                app:layout_constraintTop_toTopOf="@id/txQuiz3Date" />

            <TextView
                android:id="@+id/txQuiz3Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_thin"
                android:text="not solved yet"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/txQuiz1Date"
                app:layout_constraintTop_toTopOf="@id/txQuiz3T" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGotoQuiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/btn_custom"
                android:fontFamily="@font/ownglyph_ryuttung"
                android:text="퀴즈 풀기"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txQuiz3Date" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="@id/txDetailTitle"
                app:layout_constraintTop_toTopOf="@id/view">

                <ImageView
                    android:id="@+id/imBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_white" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>